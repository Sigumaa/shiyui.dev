---
import { Image } from 'astro:assets'

import { PostPreview } from 'astro-pure/components/pages'
import { getBlogCollection, sortMDByDate } from 'astro-pure/server'
import { Button, Icon, Label } from 'astro-pure/user'
import CareerTimeline from '@/components/home/CareerTimeline.astro'
import PageLayout from '@/layouts/BaseLayout.astro'
import Section from '@/components/home/Section.astro'
import SkillLayout from '@/components/home/SkillLayout.astro'
import avatar from '@/assets/avatar.jpg'
import config from '@/site-config'

type CareerTimelineEvent = {
  year: string
  month?: string
  content: string
  tag?: string
  note?: string
  variant?: 'freelance' | 'contract' | 'fulltime'
}

type ProfileStatus = {
  title: string
  icon: 'location' | 'computer' | 'bulb' | 'document' | 'github'
}

const languages = ['Go', 'Python', 'Rust', 'C++', 'Dart', 'CMake', 'TypeScript', 'HTML']
const frontend = ['Astro', 'TypeScript']
const backend = ['Go', 'Rust']

const MAX_POSTS = 10
const allPosts = await getBlogCollection()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)

const statusLabelClass =
  'rounded-full border border-border/60 bg-muted/30 px-3 py-1 text-xs font-medium text-muted-foreground backdrop-blur gap-x-1.5'

const profileStatuses: ProfileStatus[] = [
  { title: 'Yokohama, Japan', icon: 'location' },
  { title: 'Corporate-IT Engineer', icon: 'computer' },
  { title: 'DX / SX / AI 推進', icon: 'bulb' },
  { title: 'Freelance Web Engineer', icon: 'document' },
  { title: 'Go Lover', icon: 'github' }
]

const jobHistory: CareerTimelineEvent[] = [
  {
    year: '2024',
    month: '02',
    content: '個人事業主',
    tag: '個人事業主',
    note: 'Web エンジニア / プロトタイピング',
    variant: 'freelance'
  },
  {
    year: '2024',
    month: '02',
    content: '[ #non-public information# ] Inc.',
    tag: '業務委託',
    note: '個人事業主として請負',
    variant: 'contract'
  },
  {
    year: '2025',
    month: '04',
    content: '[ #non-public information# ] Ltd.',
    tag: '正社員',
    note: 'DX・SX・AI 推進を担当',
    variant: 'fulltime'
  }
]

const eventHistory: CareerTimelineEvent[] = [
  { year: '2020', month: '08', content: 'OPEN HACK U 2020' },
  { year: '2021', month: '03', content: 'サポーターズハッカソン' },
  { year: '2021', month: '09', content: '技育展 2021 登壇' },
  { year: '2021', month: '12', content: 'OPEN HACK U 2021' },
  { year: '2022', month: '09', content: '技育展 2022 登壇' },
  { year: '2023', month: '08', content: 'Kloud Hackathon #3' },
  { year: '2024', month: '02', content: 'Interaction 2024 採択・発表' },
  { year: '2024', month: '08', content: '都知事杯 Open Data Hackathon' }
]
---

<PageLayout meta={{ title: 'Home' }} highlightColor='#659EB9'>
  <main class='flex w-full flex-col items-center'>
    <section class='animate mb-10 flex flex-col items-center gap-y-7' id='content-header'>
      <Image
        src={avatar}
        alt='profile'
        class='h-28 w-auto rounded-full border p-1'
        loading='eager'
      />

      <div class='flex flex-col items-center gap-y-4'>
        <h1 class='text-3xl font-bold'>{config.author}</h1>
        <div class='flex flex-wrap justify-center gap-2'>
          {profileStatuses.map((status) => (
            <Label title={status.title} class={statusLabelClass}>
              <Icon name={status.icon} class='size-4 text-primary' slot='icon' />
            </Label>
          ))}
        </div>
      </div>

      {/* removed template link */}
    </section>

    <div id='content' class='animate flex flex-col gap-y-10 md:w-4/5 lg:w-5/6'>
      <Section title='About'>
        <p class='text-muted-foreground'>しゆいです。</p>
        <Button title='More about me' class='w-fit self-end' href='/about' variant='ahead' />
      </Section>
      {
        allPostsByDate.length > 0 && (
          <Section title='Posts'>
            <ul class='flex flex-col gap-y-1.5 sm:gap-y-2'>
              {allPostsByDate.map((p) => (
                <li class='flex flex-col gap-x-2 sm:flex-row'>
                  <PostPreview post={p} />
                </li>
              ))}
            </ul>
            <Button title='More posts' class='w-fit self-end' href='/blog' variant='ahead' />
          </Section>
        )
      }

      {
        /* <Section title='Experience'>
      <Card
        heading='Lorem Ipsum'
        subheading='Sit amet consectetur'
        date='Dec 2022 - Nov 2023'
        imagePath='/src/assets/about-astro.png'
        altText='Lorem, ipsum dolor sit'
        imageClass='h-12 w-auto md:-start-16'
      >
        <ul class='ms-4 list-disc text-muted-foreground'>
          <li>
            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Dolore debitis recusandae, ut
            molestiae laboriosam pariatur!

            <li>Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestiae, pariatur!</li>
          </li>
        </ul>
      </Card>
      <Card
        heading='Lorem Ipsum'
        subheading='Sit amet consectetur'
        date='Dec 2022 - Nov 2023'
        imagePath='/src/assets/about-astro.png'
        altText='Lorem, ipsum dolor sit'
        imageClass='h-12 w-auto md:-start-16'
      />
    </Section> */
      }
      

      {/* Website List removed */}

      {/* Certifications removed */}

      <Section title='Skills'>
        <SkillLayout title='Languages' skills={languages} />
        <SkillLayout title='Frontend' skills={frontend} />
        <SkillLayout title='Backend' skills={backend} />
      </Section>
      {/* Career timeline split into job and event histories */}
      {jobHistory.length > 0 && (
        <Section title='Job'>
          <CareerTimeline events={jobHistory} />
        </Section>
      )}
      {eventHistory.length > 0 && (
        <Section title='Event'>
          <CareerTimeline events={eventHistory} />
        </Section>
      )}
    </div>
  </main>
</PageLayout>
